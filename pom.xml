<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
  <modelVersion>4.0.0</modelVersion>    
  <groupId>at.joestr</groupId>
  <artifactId>postbox</artifactId>
  <version>1.2.6</version>
  <packaging>jar</packaging>
    
  <name>PostBox</name>
  <description>Sending items to other players.</description>
  <url>https://projects.joestr.at/postbox/</url>
  <inceptionYear>2016</inceptionYear>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
    
  <organization>
    <name>joestr.at</name>
    <url>https://www.joestr.at</url>
  </organization>
    
  <licenses>
    <license>
      <name>MIT license</name>
      <distribution>repo</distribution>
      <url>https://github.com/joestrhq/PostBox/blob/master/LICENSE</url>
      <!--<comments></comments>-->
    </license>
  </licenses>
    
  <scm>
    <url>https://github.com/joestrhq/PostBox/</url>
    <connection>scm:git:https://github.com/joestrhq/PostBox.git</connection>
    <developerConnection>scm:git:https://github.com/joestrhq/PostBox.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <ciManagement>
    <system>gocd</system>
    <url>https://ci.joestr.at/activity/PIP.github.joestrhq.PostBox_master.pr</url>
    <notifiers>
      <notifier>
        <type>mail</type>
        <address>strasser999@gmail.com</address>
        <sendOnSuccess>false</sendOnSuccess>
        <sendOnWarning>true</sendOnWarning>
        <sendOnError>true</sendOnError>
        <sendOnFailure>true</sendOnFailure>
      </notifier>
    </notifiers>
  </ciManagement>
  
  <!--
  This is not a library neither does this package expose any Api so we do not have to
  deploy it to Sonatype OSS.
  -->
