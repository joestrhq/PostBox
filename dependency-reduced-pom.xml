<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>at.joestr</groupId>
  <artifactId>postbox</artifactId>
  <name>PostBox</name>
  <version>1.0.0-SNAPSHOT</version>
  <description>Sending items to other players.</description>
  <url>https://projects.joestr.at/postbox/</url>
  <issueManagement>
    <system>github</system>
    <url>https://github.com/joestrhq/PostBox/issues</url>
  </issueManagement>
  <ciManagement>
    <system>gocd</system>
    <url>https://ci.joestr.at/activity/PIP.github.joestrhq.PostBox_master.pr</url>
    <notifiers>
      <notifier>
        <sendOnSuccess>false</sendOnSuccess>
        <address>strasser999@gmail.com</address>
      </notifier>
    </notifiers>
  </ciManagement>
  <inceptionYear>2016</inceptionYear>
  <developers>
    <developer>
      <id>joestr</id>
      <name>Joel Strasser</name>
      <email>strasser999@gmail.com</email>
      <url>https://www.joestr.priv.at</url>
      <organization>joestr.at</organization>
      <organizationUrl>https://www.joestr.at</organizationUrl>
      <roles>
        <role>head developer</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>X11 license</name>
      <url>https://github.com/joestrhq/PostBox/blob/master/LICENSE</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://github.com/joestrhq/PostBox.git</connection>
    <developerConnection>scm:git:https://github.com/joestrhq/PostBox.git</developerConnection>
    <url>https://github.com/joestrhq/PostBox/</url>
  </scm>
  <organization>
    <name>joestr.at</name>
    <url>https://www.joestr.at</url>
  </organization>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>**/*.yml</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration />
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>false</minimizeJar>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <artifactSet>
                <includes>
                  <include>com.j256.ormlite:ormlite-core</include>
                  <include>com.j256.ormlite:ormlite-jdbc</include>
                  <include>com.vdurmont:semver4j</include>
                  <include>org.enginehub:squirrelid</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>com.j256.ormlite</pattern>
                  <shadedPattern>at.joestr.postbox.zzzthirdpartylib.com.j256.ormlite</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.vdurmont.semver4j</pattern>
                  <shadedPattern>at.joestr.postbox.zzzthirdpartylib.com.vdurmont.semver4j</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.enginehub.squirrelid</pattern>
                  <shadedPattern>at.joestr.postbox.zzzthirdpartylib.org.enginehub.squirrelid</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.MF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
                <exclude>META-INF/services/**</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jarsigner-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>sign</id>
            <goals>
              <goal>sign</goal>
            </goals>
          </execution>
          <execution>
            <id>verify</id>
            <goals>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <archiveDirectory>${project.build.directory}</archiveDirectory>
          <includes>
            <include>*.jar</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>joestrhq-public-releases-repo</id>
      <name>joestrhq's public repo for releases</name>
      <url>https://mvn-repo.joestr.at/repository/releases/</url>
    </repository>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>joestrhq-public-snapshots-repo</id>
      <name>joestrhq's public repo for snapshots</name>
      <url>https://mvn-repo.joestr.at/repository/snapshots/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.18.1-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.luckperms</groupId>
      <artifactId>api</artifactId>
      <version>5.3</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.12.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>3.1.2</version>
        <configuration>
          <configLocation>google_checks.xml</configLocation>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
</project>
